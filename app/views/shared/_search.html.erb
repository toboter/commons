<%= form_tag search_path, :method => 'get', class: "" do %>
  <div class="input-group">
    <span class="input-group-addon">
      <%= link_to fa_icon('search'), help_path(anchor: 'searching') %>
    </span>
    <%= select_tag :q, options_for_select(ActsAsTaggableOn::Tag.order(name: :asc).pluck(:name), params[:q]), multiple: true, class: "form-control", id: 'tag_search' %>
  </div>
<% end %>