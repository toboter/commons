<%= link_to image.file_url(:size_1280), class: 'lightbox-link' do %>
  <%= image_tag image.file_url(local_assigns[:full] ? :size_1280 : :size_640), class: 'img-responsive', style: 'width:100%;' %>
<% end %>

<% if local_assigns[:full] %>
  <div class="" style="margin-top:30px;">
    <h4>Metadata of the original file</h4>
    <table class="table table-bordered">
      <tbody>
        <% image.file[:original].metadata.each do |key, value| %>
          <tr>
            <td>
              <%= key.humanize %>
            </td>
            <td>
              <%= value %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>