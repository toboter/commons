<div class="col-lg-3 col-sm-4" id="image-<%= subject.id %>">
  <%= link_to subject, class: "portfolio-box" do %>
    <%= image_tag subject.attachment.index_thumb.url, class: "img-responsive" %>
    <div class="portfolio-box-caption">
      <div class="portfolio-box-caption-content">
        <div class="project-category text-faded">
          <%= subject.name %>
        </div>
        <div class="project-name">
                
        </div>
      </div>
    </div>
  <% end %>
</div>