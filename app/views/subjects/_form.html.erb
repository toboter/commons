<%= simple_form_for(@subject, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.file_field :file %>
    
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :tag_list, collection: ActsAsTaggableOn::Tag.order(name: :asc), label_method: :name, 
          value_method: :name, selected: @subject.tag_list, 
          input_html: {multiple: true, id: 'tag_names'} %>
    
    <%= f.input :copyright_owner %>
    <%= f.input :copyright_license %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
